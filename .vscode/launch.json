{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "apiKey",
            "type": "promptString",
            "password": true,
            "description": "Bunq API Key"
        },
        {
            "id": "startDate",
            "type": "promptString",
            "default": "1970-01-01",
            "description": "Start date of statement export"
        },
        {
            "id": "endDate",
            "type": "promptString",
            "default": "2099-12-31",
            "description": "End date of statement export"
        },
        {
            "id": "configurationFile",
            "type": "promptString",
            "description": "Bunq configuration file to use"
        }
    ],
    "configurations": [
        {
            "name": "Bunq: Debug app.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--production",
                "create-config"
            ],
            "justMyCode": true
        },
        {
            "name": "Bunq: Create production configuration",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--production",
                "--config-file",
                "${input:configurationFile}",
                "create-config",
                "--api-key",
                "${input:apiKey}"
            ],
            "justMyCode": true
        },
        {
            "name": "Bunq: Export all statements",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--production",
                "--config-file",
                "${input:configurationFile}",
                "export",
                "--start-date",
                "${input:startDate}",
                "--end-date",
                "${input:endDate}",
            ],
            "justMyCode": true
        },
        {
            "name": "Python: Gunicorn (uWSGI)",
            "type": "python",
            "request": "launch",
            "module": "gunicorn",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "--workers=1",
                "--timeout=0", // This disables the timeout, useful for debugging
                "--reload", // This flag enables auto-reloading on code changes
                "--bind=127.0.0.1:5000",
                "server:create_server()"
            ],
            "preLaunchTask": "Chisel client",
            "postDebugTask": "Terminate Chisel client",
            "jinja": true,
            "justMyCode": false,
        },
        {
            "name": "Bunq: Delete all statements",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--production",
                "--config-file",
                "${input:configurationFile}",
                "remove-all-statements"
            ],
            "justMyCode": false
        }
    ]
}
