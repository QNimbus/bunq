{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "actionDefinition": {
            "type": "object",
            "properties": {
                "action": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "title": "Action Type",
                            "enum": [
                                "CREATE_REQUEST_FROM_PAYMENT"
                            ]
                        },
                        "data": {
                            "$ref": "#/definitions/CreateRequestActionData"
                        },
                        "events": {
                            "type": "array",
                            "title": "Event types",
                            "items": {
                                "$ref": "#/definitions/EventType"
                            }
                        }
                    },
                    "required": [
                        "type",
                        "data",
                        "events"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "action"
            ],
            "additionalProperties": true
        },
        "rule": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "title": "Rule Type",
                    "enum": [
                        "REGEX",
                        "EQUALS",
                        "DOES_NOT_EQUAL",
                        "IS_EMPTY",
                        "IS_NOT_EMPTY",
                        "IS_NEGATIVE",
                        "IS_POSITIVE",
                        "CONTAINS",
                        "DOES_NOT_CONTAIN"
                    ]
                },
                "value": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                },
                "property": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "property"
            ],
            "additionalProperties": true
        },
        "ruleGroup": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "condition": {
                    "type": "string",
                    "enum": [
                        "ALL",
                        "ANY",
                        "NONE"
                    ]
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/rule"
                            },
                            {
                                "$ref": "#/definitions/ruleGroup"
                            }
                        ]
                    }
                }
            },
            "required": [
                "condition",
                "rules"
            ],
            "additionalProperties": true
        },
        "CreateRequestActionData": {
            "type": "object",
            "properties": {
                "amount_value_property": {
                    "type": "string",
                    "default": "amount.value"
                },
                "amount_value_absolute": {
                    "type": "boolean",
                    "default": true
                },
                "append_original_description": {
                    "type": "boolean",
                    "default": true
                },
                "request_from": {
                    "$ref": "#/definitions/BankAccount"
                },
                "description": {
                    "type": "string",
                    "default": ""
                }
            },
            "required": [
                "request_from"
            ],
            "additionalProperties": false
        },
        "EventType": {
            "type": "string",
            "enum": [
                "MUTATION_CREATED",
                "MUTATION_RECEIVED",
                "PAYMENT_CREATED",
                "PAYMENT_RECEIVED",
                "CARD_PAYMENT_ALLOWED",
                "CARD_TRANSACTION_NOT_ALLOWED",
                "REQUEST_INQUIRY_CREATED",
                "REQUEST_INQUIRY_ACCEPTED",
                "REQUEST_INQUIRY_REJECTED",
                "REQUEST_RESPONSE_CREATED",
                "REQUEST_RESPONSE_ACCEPTED",
                "REQUEST_RESPONSE_REJECTED"
            ]
        },
        "BankAccount": {
            "type": "object",
            "properties": {
                "iban": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "iban",
                "name"
            ],
            "additionalProperties": false
        }
    },
    "type": "array",
    "title": "Rules",
    "items": {
        "type": "object",
        "title": "RuleRoot",
        "oneOf": [
            {
                "type": "object",
                "title": "Rule root",
                "allOf": [
                    {
                        "$ref": "#/definitions/actionDefinition"
                    },
                    {
                        "$ref": "#/definitions/rule"
                    }
                ]
            },
            {
                "type": "object",
                "title": "RuleGroup root",
                "allOf": [
                    {
                        "$ref": "#/definitions/actionDefinition"
                    },
                    {
                        "$ref": "#/definitions/ruleGroup"
                    }
                ]
            }
        ]
    }
}
