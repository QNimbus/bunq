{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "RuleProperty": {
            "type": "object",
            "title": "Rule that acts on a property",
            "properties": {
                "type": {
                    "title": "Property rule type",
                    "enum": [
                        "REGEX",
                        "EQUALS",
                        "DOES_NOT_EQUAL",
                        "IS_EMPTY",
                        "IS_NOT_EMPTY",
                        "IS_NEGATIVE",
                        "IS_POSITIVE",
                        "CONTAINS",
                        "DOES_NOT_CONTAIN"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "property": {
                    "type": "string"
                },
                "case_sensitive": {
                    "title": "Case sensitive comparison",
                    "type": "boolean",
                    "default": true
                },
                "value": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    ]
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "DOES_NOT_CONTAIN",
                                    "CONTAINS",
                                    "EQUALS",
                                    "DOES_NOT_EQUAL"
                                ]
                            }
                        }
                    },
                    "then": {
                        "title": "Rule that checks a property against a string or a list of strings",
                        "properties": {
                            "case_sensitive": true,
                            "value": true,
                            "property": true
                        },
                        "required": [
                            "value",
                            "property"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "REGEX"
                                ]
                            }
                        }
                    },
                    "then": {
                        "title": "Rule that checks a property against a regular expression",
                        "properties": {
                            "case_sensitive": true,
                            "value": true,
                            "property": true
                        },
                        "required": [
                            "value",
                            "property"
                        ]
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "IS_EMPTY",
                                    "IS_NOT_EMPTY",
                                    "IS_NEGATIVE",
                                    "IS_POSITIVE"
                                ]
                            }
                        }
                    },
                    "then": {
                        "title": "Rule that checks a property against a boolean expression",
                        "properties": {
                            "property": true,
                            "value": false,
                            "case_sensitive": false
                        },
                        "required": [
                            "property"
                        ]
                    }
                }
            ],
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "RuleBalance": {
            "type": "object",
            "title": "Rule that acts on balance",
            "properties": {
                "type": {
                    "title": "Balance rule type",
                    "enum": [
                        "BALANCE_DECREASED",
                        "BALANCE_INCREASED",
                        "BALANCE_INCREASED_BY",
                        "BALANCE_DECREASED_BY"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "value": {
                    "type": "number"
                },
                "by": {
                    "enum": [
                        "EXACT",
                        "AT_LEAST",
                        "AT_MOST"
                    ],
                    "default": "EXACT"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "BALANCE_DECREASED",
                                    "BALANCE_INCREASED"
                                ]
                            }
                        }
                    },
                    "then": {
                        "title": "Rule that checks for balance increase or decrease",
                        "properties": {
                            "by": false,
                            "value": false
                        },
                        "required": []
                    }
                },
                {
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "BALANCE_INCREASED_BY",
                                    "BALANCE_DECREASED_BY"
                                ]
                            }
                        }
                    },
                    "then": {
                        "title": "Rule that compares the balance change against a value",
                        "properties": {
                            "value": true,
                            "by": true
                        },
                        "required": [
                            "value",
                            "by"
                        ]
                    }
                }
            ],
            "required": [
                "type"
            ],
            "additionalProperties": false
        },
        "RuleGroup": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "condition": {
                    "$ref": "#/definitions/RuleCondition"
                },
                "rules": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "oneOf": [
                                    {
                                        "$ref": "#/definitions/RuleProperty"
                                    },
                                    {
                                        "$ref": "#/definitions/RuleBalance"
                                    }
                                ]
                            },
                            {
                                "$ref": "#/definitions/RuleGroup"
                            }
                        ]
                    }
                }
            },
            "required": [
                "condition",
                "rules"
            ],
            "additionalProperties": false
        },
        "RuleCondition": {
            "type": "string",
            "enum": [
                "ALL",
                "ANY",
                "NONE"
            ]
        },
        "CreateRequestActionData": {
            "type": "object",
            "properties": {
                "ignore_own_accounts": {
                    "type": "boolean",
                    "default": true
                },
                "request_from": {
                    "$ref": "#/definitions/BankAccount"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "request_from"
            ],
            "additionalProperties": false
        },
        "ForwardPaymentActionData": {
            "type": "object",
            "properties": {
                "allow_third_party_accounts": {
                    "type": "boolean",
                    "default": false
                },
                "forward_payment_to": {
                    "$ref": "#/definitions/BankAccount"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "forward_payment_to"
            ],
            "additionalProperties": false
        },
        "ForwardRemainingBalanceActionData": {
            "type": "object",
            "properties": {
                "forward_remaining_balance_to": {
                    "$ref": "#/definitions/BankAccount"
                },
                "allow_third_party_accounts": {
                    "type": "boolean",
                    "default": false
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "forward_remaining_balance_to"
            ],
            "additionalProperties": false
        },
        "EventType": {
            "type": "string",
            "enum": [
                "MUTATION_CREATED",
                "MUTATION_RECEIVED",
                "PAYMENT_CREATED",
                "PAYMENT_RECEIVED",
                "CARD_PAYMENT_ALLOWED",
                "CARD_TRANSACTION_NOT_ALLOWED",
                "REQUEST_INQUIRY_CREATED",
                "REQUEST_INQUIRY_ACCEPTED",
                "REQUEST_INQUIRY_REJECTED",
                "REQUEST_RESPONSE_CREATED",
                "REQUEST_RESPONSE_ACCEPTED",
                "REQUEST_RESPONSE_REJECTED"
            ]
        },
        "BankAccount": {
            "type": "object",
            "properties": {
                "iban": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "iban",
                "name"
            ],
            "additionalProperties": false
        }
    },
    "type": "array",
    "items": {
        "type": "object",
        "title": "RuleRoot",
        "properties": {
            "name": {
                "type": "string"
            },
            "action": {
                "type": "object",
                "properties": {
                    "type": {
                        "title": "Action Type",
                        "enum": [
                            "DUMMY",
                            "REQUEST_FROM_PAYMENT",
                            "FORWARD_REMAINING_BALANCE",
                            "FORWARD_INCOMING_PAYMENT",
                            "FORWARD_PAYMENT"
                        ]
                    },
                    "events": {
                        "type": "array",
                        "title": "Event types",
                        "items": {
                            "$ref": "#/definitions/EventType"
                        }
                    },
                    "data": {
                        "type": "object",
                        "oneOf": [
                            {
                                "$ref": "#/definitions/CreateRequestActionData"
                            },
                            {
                                "$ref": "#/definitions/ForwardPaymentActionData"
                            },
                            {
                                "$ref": "#/definitions/ForwardRemainingBalanceActionData"
                            }
                        ]
                    },
                    "dry_run": {
                        "type": "boolean",
                        "default": false
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "REQUEST_FROM_PAYMENT"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/CreateRequestActionData"
                                }
                            },
                            "required": [
                                "data"
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "FORWARD_REMAINING_BALANCE"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/ForwardRemainingBalanceActionData"
                                }
                            },
                            "required": [
                                "data"
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "FORWARD_PAYMENT"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/ForwardPaymentActionData"
                                }
                            },
                            "required": [
                                "data"
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "FORWARD_INCOMING_PAYMENT"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "data": {
                                    "$ref": "#/definitions/ForwardPaymentActionData"
                                }
                            },
                            "required": [
                                "data"
                            ]
                        }
                    },
                    {
                        "if": {
                            "properties": {
                                "type": {
                                    "const": "TEST_ACTION"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "data": {
                                    "not": true
                                }
                            },
                            "required": []
                        }
                    }
                ],
                "required": [
                    "type",
                    "events"
                ],
                "additionalProperties": false
            },
            "rule": {
                "oneOf": [
                    {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/RuleProperty"
                            },
                            {
                                "$ref": "#/definitions/RuleBalance"
                            }
                        ]
                    },
                    {
                        "$ref": "#/definitions/RuleGroup"
                    }
                ]
            }
        },
        "required": [
            "action",
            "rule"
        ],
        "additionalProperties": false
    }
}
